generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String       @id @default(cuid())
  email     String       @unique
  name      String?
  avatar    String?
  batches   EmailBatch[]
  createdAt DateTime     @default(now())
}

model EmailBatch {
  id        String   @id @default(cuid())
  name      String
  status    String
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  emails    Email[]
  createdAt DateTime @default(now())
}

model Email {
  id        String     @id @default(cuid())
  to        String
  subject   String
  body      String
  status    String
  batchId   String
  batch     EmailBatch @relation(fields: [batchId], references: [id])
  createdAt DateTime   @default(now())
}
